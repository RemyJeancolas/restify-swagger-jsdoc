{
  "name": "restify-swagger-jsdoc",
  "version": "1.0.9",
  "description": "Create Swagger documentation page based on jsdoc",
  "main": "js/index.js",
  "scripts": {
    "build": "rm -rf js && tsc",
    "lint": "tslint -c tslint.json ./src/*.ts ./tests/*.ts --format verbose",
    "test": "mocha tests --compilers ts:ts-node/register --bail",
    "cover": "nyc --report-dir tests/coverage npm run test",
    "coveralls": "cat tests/coverage/lcov.info | ./node_modules/.bin/coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RemyJeancolas/restify-swagger-jsdoc.git"
  },
  "keywords": [
    "restify",
    "swagger",
    "jsdoc",
    "api"
  ],
  "author": "RÃ©my Jeancolas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RemyJeancolas/restify-swagger-jsdoc/issues"
  },
  "homepage": "https://github.com/RemyJeancolas/restify-swagger-jsdoc#readme",
  "dependencies": {
    "mime-types": "^2.1.11",
    "restify": "^4.1.1",
    "swagger-jsdoc": "^1.3.0",
    "swagger-ui": "^2.1.5"
  },
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/mime-types": "^2.1.0",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.22",
    "@types/restify": "^4.3.2",
    "@types/sinon": "^2.2.2",
    "chai": "^4.0.0",
    "coveralls": "^2.13.1",
    "mocha": "^3.4.2",
    "nyc": "^10.3.2",
    "sinon": "^2.3.2",
    "ts-node": "^3.0.4",
    "tslint": "^5.3.2",
    "tslint-microsoft-contrib": "^5.0.0",
    "typescript": "^2.3.3"
  },
  "typings": "index.d.ts",
  "nyc": {
    "include": [
      "src/*.ts"
    ],
    "exclude": [
      "index.d.ts",
      "typings.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "text-summary",
      "lcov"
    ],
    "all": true
  }
}
